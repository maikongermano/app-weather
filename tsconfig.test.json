{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "types": ["jest", "@testing-library/jest-dom"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "incremental": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "tests/**/*.ts",
      "tests/**/*.tsx",
      "jest.setup.ts"
    ],
    "exclude": ["node_modules"]
  }
  